{
  "name": "anpta dev",
  "image": "vhaasteren/anpta:cpu",
  "runArgs": [
    "--user", "${localEnv:UID}:${localEnv:GID}"
  ],
  "remoteUser": "anpta",
  "workspaceFolder": "/workspaces/anpta",
  "workspaceMount": "type=bind,source=${localWorkspaceFolder},target=/workspaces/anpta,consistency=cached",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-python.vscode-pylance",
        "redhat.vscode-yaml",
        "eamodio.gitlens"
      ]
    }
  }
}
