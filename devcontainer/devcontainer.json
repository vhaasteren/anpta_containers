{
  "name": "anpta dev",
  "image": "vhaasteren/anpta:cpu",
  "containerEnv": {
    "HOST_UID": "${localEnv:UID}",
    "HOST_GID": "${localEnv:GID}",
    "HOME_OVERRIDE": "/workspaces/${localWorkspaceFolderBasename}/.home"
  },
  "remoteUser": "anpta",
  "remoteEnv": {
    "HOME": "${containerEnv:HOME_OVERRIDE}",
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "onCreateCommand": "mkdir -p \"$HOME\" && git config --global --add safe.directory \"$PWD\" || true",
  "mounts": [
    "source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-python.vscode-pylance",
        "redhat.vscode-yaml",
        "eamodio.gitlens"
      ]
    }
  }
}
