{
  "name": "anpta dev",
  "image": "vhaasteren/anpta:cpu",
  "overrideCommand": false,
  "containerEnv": {
    "HOST_UID": "${localEnv:UID}",
    "HOST_GID": "${localEnv:GID}",
    "HOME_OVERRIDE": "/workspaces/${localWorkspaceFolderBasename}/.home",
    "PYTHONUSERBASE": "/workspaces/${localWorkspaceFolderBasename}/.home/.local",
    "PYTHONPYCACHEPREFIX": "/workspaces/${localWorkspaceFolderBasename}/.home/.cache/pycache"
  },
  "remoteUser": "anpta",
  "updateRemoteUserUID": false,
  "remoteEnv": {
    "HOME": "${containerEnv:HOME_OVERRIDE}",
    "VIRTUAL_ENV": "/opt/venvs/pta",
    "PATH": "/opt/venvs/pta/bin:${containerEnv:PYTHONUSERBASE}/bin:${containerEnv:PATH}",
    "DISPLAY": ":0"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "onCreateCommand": "mkdir -p \"$HOME\" && git config --global --add safe.directory \"$PWD\" || true",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/venvs/pta/bin/python",
        "python.terminal.activateEnvironment": false,
        "jupyter.kernels.filter": [
          {
            "type": "pythonEnvironment",
            "path": "/opt/venvs/pta/bin/python"
          }
        ],
        "jupyter.kernelSpecRootPaths": [
          "/opt/venvs/pta/share/jupyter/kernels"
        ]
      },
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-python.vscode-pylance",
        "redhat.vscode-yaml",
        "eamodio.gitlens"
      ]
    }
  }
}
