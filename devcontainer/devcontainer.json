{
  "name": "anpta dev",
  "image": "vhaasteren/anpta:cpu-devcontainer",
  "runArgs": [
    "--user", "${localEnv:UID}:${localEnv:GID}"
  ],
  "remoteEnv": {
    "HOME": "/workspaces/anpta/.home"
  },
  "workspaceFolder": "/workspaces/anpta",
  "workspaceMount": "type=bind,source=${localWorkspaceFolder},target=/workspaces/anpta,consistency=cached",
  "postCreateCommand": "mkdir -p /workspaces/anpta/.home && git config --global --add safe.directory /workspaces/anpta || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-python.vscode-pylance",
        "redhat.vscode-yaml",
        "eamodio.gitlens"
      ]
    }
  }
}
